@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <h1 style="color:white">Game Rentals</h1>
    <p style="color:white">Rent games here!</p>
    <p><a href="../Rentals/Create" class="btn btn-primary btn-lg">New Rental &raquo;</a></p>

    <a href="../Home/About" class="btn btn-success btn-lrg">See our most popular titles &raquo;</a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>List of Titles</h2>
        <p>
            Check available games here!
        </p>
        <p><a class="btn btn-info" href="../Copies">Click Here &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>List of Genres</h2>
        <p>Check available genres here!</p>
        <p><a class="btn btn-info" href="../Genres">Click Here &raquo;</a></p>
    </div>
    <div class="col-md-4">
    <h2>List of Publishers</h2>
        <p>Check available publishers here!</p>
        <p><a class="btn btn-info" href="../Publishers">Click Here &raquo;</a></p>
        </div>
</div>

<div ng-app="copyApp" ng-controller="listCopies">
    <p>Copies:</p>

    <table class="table">
        <tr>
            <th>
                Title:
            </th>
            <th>
                Copy #:
            </th>
            <th>
                Available:
            </th>
        </tr>

        <tr ng-repeat="c in copies | orderBy: 'GameTitle'">
            <td>{{c.GameTitle}} ({{c.PublisherName}}, {{c.GameYear}})</td>
            <td>{{c.CopyId}}</td>
            <td>{{c.Available}}</td>
        </tr>

    </table>

    <h4>{{copies}}</h4>

</div>

<script>

    var copyApp = angular.module('copyApp', ['ngResource']);
    copyApp.factory('copyService', function ($resource) {
        return $resource('../api/copies/:copyID');
    });

    copyApp.controller('listCopies', function ($scope, copyService) {
        $scope.copies = copyService.query();

    });
</script>